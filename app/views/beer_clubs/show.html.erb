<h1><%= @beer_club.name %> <%= @beer_club.city %></h1>

<p>
  Founded <%= @beer_club.founded %>
</p>

<h2>Members</h2>
<ul>
  <% @beer_club.members.each do |member| %>
      <li><%= link_to member.username, member %></li>
  <% end %>
</ul>
<% if current_user %>
    <p>
      <% if !@beer_club.members.include?(current_user) %>
          <%= form_for(@membership) do |f| %>
              <%= f.hidden_field :beer_club_id %>
              <%= f.submit class: 'btn btn-primary', value: "join the club" %>
          <% end %>
      <% else %>
          <%= form_for(Membership.find_by(user_id: current_user.id, beer_club_id: @beer_club.id), method: "delete") do |f| %>
              <%= f.hidden_field :beer_club_id %>
              <%= f.submit value: "end the membership", class: 'btn btn-danger btn-sm' %>
          <% end %>
      <% end %>
    </p>
    <p>
      <%= link_to('Edit', edit_beer_club_path(@beer_club), class: 'btn btn-default') %>
      <%= link_to('Destroy the club', @beer_club, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'}) %>
    </p>
<% end %>